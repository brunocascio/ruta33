{# src/Firmas/AdminBundle/Resources/views/Persona/edit.html.twig #}
{% extends 'FirmasAdminBundle::base.html.twig' %}

{% block head %}
     {{ parent() }}
     {% block title %}<title>{{ entity.nombre }}</title>{% endblock %}
{% endblock %}

{% block body -%}

{% block header %} {{parent()}} {% endblock %}

    <h1 class="text-center">Edici√≥n para <span class="fuente text-info">{{ entity.nombre}}</span></h1>

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="text-center alert alert-success">
            {{ flashMessage }}
            </div>
        {% endfor %}


        <div class="form-horizontal text-center">
            <form class="" action="{{ path('persona_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
                <input type="hidden" name="_method" value="PUT" />
                {{ form_widget(edit_form) }}

            </form>

    <ul class="record_actions inline">
        <li>
            <a class="link" href="{{ path('persona') }}">
                Volver a la lista
            </a>
        </li>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <li>
            <form action="{{ path('persona_delete', { 'id': entity.id }) }}" method="post">
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit">Borrar</button>
            </form>
        </li>
        {% endif %}
    </ul>
</div>

{% block footer %} {{parent()}} {% endblock %}


{% endblock %}

{% block javascripts %}  
    {{parent()}}
{% endblock %}
